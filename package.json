{
  "name": "x402-nexus",
  "version": "1.0.0",
  "description": "Non-Custodial Payment Reliability Layer for Stacks x402 Protocol",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "deploy:contract": "npm run deploy --workspace=packages/contracts",
    "install:all": "npm install && npm install --workspace=packages/backend && npm install --workspace=packages/frontend && npm install --workspace=packages/sdk",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/package-lock.json package-lock.json",
    "setup": "npm run clean && npm run install:all"
  },
  "keywords": [
    "x402",
    "stacks",
    "blockchain",
    "payments",
    "reliability",
    "micropayments"
  ],
  "author": "Ramakrishnan Yadav <ramakrishnayadav2004@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramakrishnanyadav/402Xstacks.git"
  },
  "bugs": {
    "url": "https://github.com/ramakrishnanyadav/402Xstacks/issues"
  },
  "homepage": "https://github.com/ramakrishnanyadav/402Xstacks#readme",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
